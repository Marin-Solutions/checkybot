APP_NAME="CheckyBot Testing"
APP_ENV=testing
APP_KEY=base64:2mRiLZL9YhWc8Z7sK1p3N6Q8vT4wU5yX9bA0cD1eF2g=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

# Use SQLite in-memory database for tests
DB_CONNECTION=sqlite
DB_DATABASE=:memory:

# Session and Cache
SESSION_DRIVER=array
SESSION_LIFETIME=120
CACHE_STORE=array
CACHE_PREFIX=test_

# Queue - use sync for immediate execution in tests
QUEUE_CONNECTION=sync

# Broadcasting
BROADCAST_CONNECTION=log

# Mail - use array driver to capture emails
MAIL_MAILER=array
MAIL_FROM_ADDRESS="test@checkybot.test"
MAIL_FROM_NAME="${APP_NAME}"

# Redis - disabled for tests
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Telescope and Horizon - disabled for tests
TELESCOPE_ENABLED=false
HORIZON_ENABLED=false
PULSE_ENABLED=false

# Reverb - disabled for tests
REVERB_APP_ID=test-app-id
REVERB_APP_KEY=test-app-key
REVERB_APP_SECRET=test-app-secret

# BCrypt rounds - reduced for faster tests
BCRYPT_ROUNDS=4

# Filesystem
FILESYSTEM_DISK=local
