APP_NAME="CheckyBot"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://yourdomain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# Session & Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis
CACHE_PREFIX=

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================================================
# REVERB WEBSOCKET CONFIGURATION (Laravel Reverb)
# ============================================================================
# 
# SETUP INSTRUCTIONS FOR PRODUCTION:
# 
# 1. Generate unique credentials:
#    - REVERB_APP_ID: Can be "1" or any unique identifier
#    - REVERB_APP_KEY & SECRET: Run: echo "base64:$(openssl rand -base64 32)"
#
# 2. Replace REVERB_HOST with your actual production domain
#    Example: checkybot.com or app.yourdomain.com
#
# 3. In Ploi.io Dashboard:
#    - Go to your site → "Daemons"
#    - Create new daemon with command: php artisan reverb:start
#    - This keeps the websocket server running 24/7
#
# 4. Make sure SSL/HTTPS is enabled in Ploi (usually auto-configured)
#
# ============================================================================

# Reverb App Credentials (⚠️ GENERATE NEW ONES FOR SECURITY)
REVERB_APP_ID=1
REVERB_APP_KEY=base64:dGhpc2lzYXJhbmRvbWtleWZvcnJldmVyYmFwcA==
REVERB_APP_SECRET=base64:dGhpc2lzYXJhbmRvbXNlY3JldGZvcnJldmVyYg==

# Reverb Host Configuration (⚠️ MUST CHANGE TO YOUR DOMAIN)
REVERB_HOST=yourdomain.com
REVERB_PORT=443
REVERB_SCHEME=https

# Reverb Server Configuration
REVERB_SERVER_HOST=0.0.0.0
REVERB_SERVER_PORT=8080

# Optional: Reverb Scaling with Redis
REVERB_SCALING_ENABLED=false

# Frontend Configuration (Vite - for websocket client)
VITE_APP_NAME="${APP_NAME}"
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Telescope (Development Tool)
TELESCOPE_ENABLED=false

# Horizon (Queue Dashboard)
HORIZON_ENABLED=true
